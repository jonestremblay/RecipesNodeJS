<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/libs/cute-alert/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="/libs/cute-alert/cute-alert.js"></script>
</head>
 <% include partials/navbar.ejs %>

<body>
  <br><br><br>

<div class="container" >
    <div class="container" >

        <div class="row">
            <div id="foundRecipeCard" class="card bg-dark text-white mb-3 recipeCard">
                <div class="card-header">
                    <% var imgPath = recipe.recipeImage;  %>
                    <% if(imgPath == undefined){ %>
                      <% var imgPath = "/images/recipe.jpg";  %>
                    <% } %>
                    <% imgPath = imgPath.replace('public', '') %>
                    <img src="<%= imgPath  %>" class="card-img" alt="..."  width="250px" height="250px">
                    <div class="card-img">  
                </div>
                <div class="row" style="display: flex; justify-content: space-between">
                    <div class="btn-group dropend" style="width: 10%; top: 20px;">
                        <button type="button" class="btn btn-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/images/icons/cogs.svg" class="" width="32px" height="32px">
                        </button>
                        <ul class="dropdown-menu">
                            <a href="/recipes/edit/?id=<%= recipe._id %>" style="text-decoration-line: none;">
                                <li><button class="dropdown-item" type="button">
                                    Modifier la recette
                                </button></li>
                            </a>
                            <li class="text-center">-------------------------</li>
                          
                            <li><button class="dropdown-item" type="button" 
                                    onclick="showDeleteConfirmation('<%= recipe.name %>', '<%= recipe._id %>')">
                                Supprimer la recette
                            </button></li>
                           
                        </ul>
                    </div>
                    <div class="btn-group dropstart" style="width: 10%; top: 20px;">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/images/icons/trash.png" class="" width="32px" height="32px">
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item" type="button" 
                                    onclick="deleteRecipe('<%= recipe.name %>', '<%= recipe._id %>')">
                                Supprimer cette recette
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="text-center mb-3">
                        <h1><%= recipe.name %></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row mt-5 mb-5 text-white">
                            <ul id="detailsList" class="list-group list-group-flush">
                                <li class="list-group-item bg-transparent text-white">
                                    <img src="/images/icons/stopwatch.svg" class="filter-white" width="32px" height="32px" style="margin-right: 50px;">
                                    <span style="margin-right: 25px;"><b>Préparation :</b></span>
                                    <%= recipe.tempsPreparation %> minutes
                                </li>
                                <li class="list-group-item bg-transparent text-white">
                                    <img src="/images/icons/stopwatch.svg" class="filter-white" width="32px" height="32px" style="margin-right: 50px;">
                                    <span style="margin-right: 55px;"><b>Cuisson : </b></span>
                                    <%= recipe.tempsCuisson %> minutes
                                </li>
                                <li class="list-group-item bg-transparent text-white">
                                    <img src="/images/icons/portions.svg" class="filter-white" width="32px" height="32px" style="margin-right: 50px;">
                                    Donne <%=  recipe.portions %> portions
                                </li>
                            </ul>
                        </div>
                        <div class="row ">
                            <div class="text-center">
                                <label for="ingredientsList"><h2 class="fatface">Ingrédients</h2></label>
                            </div>
                            <ul id="ingredientsList" class="list-group list-group-flush" >
                                <% recipe.ingredients.forEach(function(ingredient)  {   %>
                                    <li class="list-group-item bg-transparent text-white">
                                        <span style="margin-right: 25px;">
                                            <b><%= ingredient.quantity %></b>
                                        </span>
                                        <i><%= ingredient.name %></i>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <div class="col">
                        <div class="text-center">
                            <label for="instructionsList"><h2 class="fatface">Instructions</h2></label>
                        </div>
                        <ol id="instructionsList" class="list-group list-group-flush">
                            <% recipe.instructions.forEach(function(instruction)  {   %>
                                <li class="list-group-item bg-transparent text-white">
                                    <span style="font-size: 18px"><%= instruction.instruction %></span>
                                </li>
                            <% }); %>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="card-footer text-white text-center">
                Source : <%= recipe.source %>
            </div>
            </div>
        </div>
    
    </div>



  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
    integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"
    integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous">
  </script>
  <script src="/javascripts/common.js"></script>
  <script src="/libs/cute-alert/cute-alert.js"></script>
</body>

</html>